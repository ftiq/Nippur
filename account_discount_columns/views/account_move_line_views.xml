<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- نعرض إجمالي الخصم في نموذج الفاتورة تحت المبلغ دون الضريبة -->
  <record id="view_move_form_inherit_total_discount" model="ir.ui.view">
    <field name="name">account.move.form.inherit.total.discount</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="priority" eval="100"/>
    <field name="arch" type="xml">
      <!-- نضيف الحقل بعد amount_untaxed -->
      <xpath expr="//field[@name='amount_untaxed']" position="after">
        <field name="total_discount" readonly="1" string="إجمالي الخصم"/>
      </xpath>
    </field>
  </record>
</odoo>
