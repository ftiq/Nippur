<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- تعديل Tree View -->
    <record id="view_move_line_tree_running_balance" model="ir.ui.view">
        <field name="name">account.move.line.tree.running.balance</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="balance" position="after">
                <field name="running_balance"/>
                <field name="running_balance_currency"/>
            </field>
        </field>
    </record>

    <!-- تعديل Form View -->
    <record id="view_move_line_form_running_balance" model="ir.ui.view">
        <field name="name">account.move.line.form.running.balance</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <group name="amount" position="after">
                <group>
                    <field name="running_balance" readonly="1"/>
                    <field name="running_balance_currency" readonly="1"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
