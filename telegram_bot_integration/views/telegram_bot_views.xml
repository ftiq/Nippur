<record id="view_telegram_chat_form" model="ir.ui.view">
    <field name="name">telegram.chat.form</field>
    <field name="model">telegram.chat</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="chat_id"/>
                        <field name="username"/>
                        <field name="first_name"/>
                        <field name="last_name"/>
                    </group>
                    <group>
                        <field name="bot_id"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="active"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>