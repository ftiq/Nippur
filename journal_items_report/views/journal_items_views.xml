<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit list view of account.move.line to add Print button -->
    <record id="view_move_line_tree_inherit_report_button" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit.report.button</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="before">
                <header>
                    <button name="%(action_report_journal_items)d"
                            string="طباعة كشف الحساب"
                            type="action"
                            class="btn-primary"
                            context="{'active_ids': active_ids}"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
